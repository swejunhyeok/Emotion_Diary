<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="10dp"
            android:background="#fcc7cb"
            android:id="@+id/CommunityBtnSentiMental"
            android:layout_weight="1"
            android:text="SentiMental"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:padding="10dp"
            android:background="#00ff0000"
            android:clickable="false"
            android:id="@+id/CommunityBtnCommunity"
            android:layout_weight="1"
            android:text="COMMUNITY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ListView
        android:id="@+id/CommunityList"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/CommunityBtnAdd"
        android:layout_gravity="end"
        android:background="@drawable/compose"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</LinearLayout>